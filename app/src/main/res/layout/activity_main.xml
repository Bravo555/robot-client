<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dip">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN 1" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="PIN 2" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN 3" />

    <TextView
        android:id="@+id/servosLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servos:" />

    <SeekBar
        android:id="@+id/servo0"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo1"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo3"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo4"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo5"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo6"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <SeekBar
        android:id="@+id/servo7"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:max="255"
        android:progress="127" />

    <TextView
        android:id="@+id/log_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log:" />

    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="478dp" />

</LinearLayout>